{
  "name": "x-factory-backend",
  "version": "1.0.0",
  "description": "X-Factory Backend - XRPL-powered escrow and trade finance platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:xrpl": "vitest run src/tests/xrpl.test.ts",
    "test:api": "vitest run src/tests/api.test.ts",
    "demo": "tsx src/scripts/demo.ts",
    "demo:escrow": "tsx src/scripts/escrow-demo.ts",
    "demo:token-escrow": "tsx src/scripts/token-escrow-demo.ts",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "five-bells-condition": "^5.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "prisma": "^5.22.0",
    "uuid": "^9.0.1",
    "xrpl": "^4.4.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
